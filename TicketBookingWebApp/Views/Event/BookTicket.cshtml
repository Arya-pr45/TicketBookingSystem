@model TicketBookingWebApp.Application.DTOs.EventDto

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p><strong>Date:</strong> @Model.EventDateTime.ToString("f")</p>
    <p><strong>Available Seats:</strong> @Model.AvailableSeatIds?.Count ?? 0</p>
    <a class="btn btn-success" href="@Url.Action("BookTicket", "Event", new { id = Model.Id })">Book Now</a>
</div>
