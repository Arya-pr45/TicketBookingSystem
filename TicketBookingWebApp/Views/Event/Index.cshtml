@model IEnumerable<TicketBookingWebApp.Application.DTOs.EventDto>

@{
    ViewData["Title"] = "All Events";
}

<h2 class="text-center mb-4">Available Events</h2>

<div class="container mb-4">
    <form asp-action="Index" method="get" class="row justify-content-center">
        <div class="col-md-6 d-flex">
            <input type="text" name="searchTerm" value="@ViewBag.CurrentFilter" class="form-control me-2" placeholder="Search by event title..." />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var ev in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@ev.Title</h5>
                        <p class="card-text">
                            <strong>Date & Time:</strong> @ev.EventDateTime.ToString("dd MMM yyyy hh:mm tt")<br />
                            <strong>Type:</strong> @(ev.IsSeatBased ? "Seat-Based" : "General Admission")
                        </p>
                        <a asp-action="Details" asp-route-id="@ev.Id" class="btn btn-outline-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">No events found matching your search.</div>
}
