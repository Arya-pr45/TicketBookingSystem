@{
    ViewData["Title"] = "Welcome to TicketBookingSystem";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg text-center p-5 w-100" style="max-width: 700px; border-radius: 1rem;">

        <div class="position-relative mb-4">
            <img src="~/img/ticket-hero.jpeg" alt="People enjoying event"
                 class="img-fluid rounded" style="max-height: 300px; object-fit: cover; width: 100%; filter: brightness(85%);">
            <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 rounded"></div>
        </div>

        <h1 class="display-5 fw-bold text-danger mb-3">Welcome to TicketBookingSystem</h1>

        <p class="lead text-muted mb-4 fw-semibold">
            Book tickets for concerts, movies, sports & more. Fast. Secure. Effortless.
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg px-4 fw-semibold">
                    Login
                </a>
                <a asp-controller="Auth" asp-action="RegisterUser" class="btn btn-outline-primary btn-lg px-4 fw-semibold">
                    Register
                </a>
            </div>
        }

    </div>
</div>
