@{
    ViewData["Title"] = "Welcome to TicketBookingSystem";
}

<style>
    body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
    }

    .dark-mode .card {
        background-color: #1e1e1e;
        color: #fff;
        border: 1px solid #333;
    }

    .welcome-card {
        border-radius: 1.5rem;
        transition: all 0.3s ease-in-out;
    }

        .welcome-card:hover {
            transform: scale(1.01);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .hero-title {
        font-weight: 700;
        font-size: 2.8rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: #6c757d;
    }

    .btn-custom {
        min-width: 140px;
        font-weight: 500;
        border-radius: 0.5rem;
    }

    .hero-image {
        max-height: 300px;
        object-fit: cover;
        width: 100%;
        border-radius: 1rem;
        margin-bottom: 2rem;
    }


    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 90vh;">
    <div class="card shadow welcome-card text-center p-5 w-100" style="max-width: 700px;">

        <img src="~/img/ticket-hero.jpg" alt="People enjoying event" class="hero-image">

        <h1 class="hero-title mb-3">Welcome to TicketBookingSystem</h1>
        <p class="hero-subtitle mb-4">
            Book tickets for concerts, movies, sports & more. Fast. Secure. Effortless.
        </p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg btn-custom">
                Login
            </a>
            <a asp-controller="Auth" asp-action="RegisterUser" class="btn btn-outline-primary btn-lg btn-custom">
                Register
            </a>
        </div>
    </div>
</div>
