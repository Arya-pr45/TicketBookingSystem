@model TicketBookingWebApp.Models.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow p-4">
                <div class="mb-3">
                    <img src="https://ui-avatars.com/api/?name=@Model.UserName&background=0D8ABC&color=fff&size=128"
                         class="rounded-circle shadow" alt="Avatar" />
                </div>
                <h3 class="fw-bold text-primary">@Model.UserName</h3>
                <p class="text-muted mb-1"><i class="bi bi-envelope-at"></i> @Model.Email</p>
                <p class="text-muted mb-1"><i class="bi bi-person-badge"></i> Role: <strong>@Model.Role</strong></p>
                <p class="text-muted mb-1"><i class="bi bi-ticket-detailed"></i> Total Bookings: <strong>@Model.TotalBookings</strong></p>
            </div>
        </div>
    </div>
</div>
