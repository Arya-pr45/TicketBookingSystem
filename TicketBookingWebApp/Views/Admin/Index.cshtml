@model IEnumerable<TicketBookingWebApp.Application.DTOs.EventDto>

@{
    ViewData["Title"] = "Manage Events";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <div>
            <h2>Manage Events</h2>
        </div>
        <div>
            <a class="btn btn-success me-2" href="@Url.Action("CreateEvent", "Admin")">Create New Event</a>
            <a class="btn btn-primary" href="@Url.Action("ManageVenues", "Admin")">Create New Venue</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Date & Time</th>
                <th>Venue Name</th>
                <th>Type</th>
                <th>Tickets</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evt in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(evt.ImageUrl))
                        {
                            <img src="@evt.ImageUrl" alt="Event Image" width="100" height="60" style="object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@evt.Title</td>
                    <td>@evt.EventDateTime.ToString("f")</td>
                    <td>
                        @evt.Venue?.Name
                        <br />
                        <small class="text-muted">@evt.Venue?.Address</small>
                    </td>
                    <td>@(evt.IsSeatBased ? "Seat-Based" : "General-Admission")</td>
                    <td>@evt.TotalTickets</td>
                    <td>
                        <form asp-action="EditEvent" asp-controller="Admin" method="get" class="d-inline">
                            <input type="hidden" name="id" value="@evt.Id" />
                            <button type="submit" class="btn btn-sm btn-warning me-1">Edit</button>
                        </form>
                        <form asp-action="DeleteEvent" asp-controller="Admin" method="get" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this event?');">
                            <input type="hidden" name="id" value="@evt.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
