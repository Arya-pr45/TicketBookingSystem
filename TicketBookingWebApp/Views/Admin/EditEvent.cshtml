@model TicketBookingWebApp.Application.DTOs.EventDto

@{
    ViewData["Title"] = "Edit Event";
}

<div class="container mt-4">
    <h2>Edit Event</h2>
    <form asp-action="EditEvent" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EventDateTime"></label>
            <input asp-for="EventDateTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="EventDateTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VenueId"></label>
            <select asp-for="VenueId" class="form-control" asp-items="@ViewBag.Venues">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="VenueId" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsSeatBased" class="form-check-input" />
            <label asp-for="IsSeatBased" class="form-check-label"></label>
            <span asp-validation-for="IsSeatBased" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" />
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>
